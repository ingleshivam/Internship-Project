@model IEnumerable<Country>
@{
    ViewBag.Title = "ADMIN | COUNTRY";
    ViewBag.MainState = "active";
    ViewBag.CountryState = "active";
}
@if(TempData["CountryAlreadyExists"] != null){
    <div class="alert alert-danger fw-bold text-center">@TempData["CountryAlreadyExists"]</div>
}

@if (TempData["CountryAddedSuccessfully"] != null){
    <div class="alert alert-success fw-bold text-center">@TempData["CountryAddedSuccessfully"]</div>
}

@if (TempData["CountryDeleted"] != null){
    <div class="alert alert-danger fw-bold text-center">@TempData["CountryDeleted"]</div>
}
@if(TempData["CountryUpdated"] != null){
    <div class="alert alert-success fw-bold text-center">@TempData["CountryUpdated"]</div>
}
    <div class="card">
        <h5 class="card-header">Country List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="3"><a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Country">CREATE</a></th>
                    </tr>
                    <tr>
                        <th>Sr.No</th>
                        <th>Country Name</th>
                        <th>Edit / Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <td>@srno</td>
                            <td>@temp.CountryName</td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@temp.CountryID">Edit</a>
                                |
                                <a class="btn btn-outline-primary btn-sm" asp-action="Delete" asp-route-id="@temp.CountryID">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
        </div>
    </div>


