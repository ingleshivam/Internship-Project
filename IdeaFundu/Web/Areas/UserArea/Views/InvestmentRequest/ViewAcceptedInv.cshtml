@model AcceptInvestmentVM

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Idea Details</h5>

            <table class="table table-stripped col-md-6">
                <tr>
                    <td><b><label class="form-label-lg">Investment Request ID</label></b></td>
                    <td> <label>@Html.DisplayFor(p=>p.IVRequestID)</label></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg">Investment Accept Description</label></b></td>
                    <td><textarea rows="4" cols="80" disabled>@Html.DisplayFor(p=>p.AcceptIVDesc)</textarea></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg">Investment Amount Accepted</label></b></td>
                    <td><label>@Html.DisplayFor(p=>p.AmountAccepted)</label></td>
                </tr>

            </table>

            <div>
                <a class="btn btn-primary btn-sm mt-4" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>