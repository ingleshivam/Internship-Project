@model WorkProgress

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Work Progress Details</h5>

            <table class="table table-stripped col-md-6">
                <tr>
                    <td><b><label class="form-label-lg" asp-for="StartDate"></label></b></td>
                    <td> <label>@Html.DisplayFor(p=>p.StartDate)</label></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg" asp-for="ExpectedCompletionDate"></label></b></td>
                    <td><label>@Html.DisplayFor(p=>p.ExpectedCompletionDate)</label></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg" asp-for="Remarks"></label></b></td>
                    <td><label>@Html.DisplayFor(p=>p.Remarks)</label></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg" asp-for="CurrentStatus"></label></b></td>
                    <td><p>@Html.DisplayFor(p=>p.CurrentStatus)</p></td>
                </tr>
            </table>

            <div>
                <a class="btn btn-primary btn-sm mt-4" asp-action="WorkProgress" asp-route-id="@Model.IdeaID">Back</a>
            </div>
        </div>
    </div>
</div>
