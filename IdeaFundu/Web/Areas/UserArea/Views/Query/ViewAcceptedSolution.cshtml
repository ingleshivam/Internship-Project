@model Solution

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Solution Details</h5>

            <table class="table table-stripped col-md-6">
                <tr>
                    <td><b><label class="form-label-lg">Query ID</label></b></td>
                    <td> <label>@Html.DisplayFor(p=>p.QueryID)</label></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg">Solution Description</label></b></td>
                    <td><textarea rows="4" cols="80" disabled>@Html.DisplayFor(p=>p.SolutionDesc)</textarea></td>
                </tr>

                <tr>
                    <td><b><label class="form-label-lg">Solution Date</label></b></td>
                    <td><label>@Html.DisplayFor(p=>p.SolutionDate)</label></td>
                </tr>

            </table>

            <div>
                <a class="btn btn-primary btn-sm mt-4" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>