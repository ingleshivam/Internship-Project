@model Query
<div class="col-lg-6 mt-5 mx-auto">
    <div class="card mx-auto">
        <div class="card-body">
            <h5 class="card-title">Ask Query</h5>
            <form class="row g-3" asp-action="MakeRequest" method="Post">
                <div class="col-12">
                    <label class="form-label">Query Description</label>
                    <textarea asp-for="QueryDescription" class="form-control" style="border:1px solid #696CFF"></textarea>
                    <span asp-validation-for="QueryDescription" class="text-danger fw-bold mt-3"></span>
                </div>

                <div class="col-12 mt-2">
                    <label class="form-label">Idea Name</label>
                    <select asp-for="IdeaID" asp-items="@ViewBag.IdeaID" class="form-select" disabled>
                        <option selected="selected" value="" id="selectedIdeaID"></option>
                    </select>
                    <span asp-validation-for="IdeaID" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="InvestorID" value="@Context.Session.GetString("InvestorID")" />
                <input type="hidden" value="" name="IdeaID" id="ideaID" />
                <input type="hidden" value="" name="IdeaName" id="ideaName"/>

                <div>
                    <button type="submit" class="mt-3" style="border-radius:6px;margin-left:14px;padding:10px 40px;background-color:#696CFF; color:#fff; border:1px solid #696CFF; cursor:pointer;" asp-route-id="IdeaID">Send Query</button>
                </div>
                @if (ViewBag.Message != null)
                {
                    <h6 class="text-info fw-bold">@ViewBag.Message</h6>
                }
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("ideaID").value = sessionStorage.IdeaID;
    document.getElementById("selectedIdeaID").value = sessionStorage.IdeaID;
    document.getElementById("selectedIdeaID").text = sessionStorage.IdeaName;
    
</script>
