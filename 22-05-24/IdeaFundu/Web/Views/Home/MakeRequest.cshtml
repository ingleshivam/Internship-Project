@model IVRequest
<div class="col-lg-6 mt-5 mx-auto">
    <div class="card mx-auto">
        <div class="card-body">
            <h5 class="card-title">Investment Request</h5>
            <form class="row g-3"  asp-action="MakeRequest" method="Post">
                <div class="col-12">
                    <label class="form-label">Investment Request Description</label>
                    <textarea asp-for="IVRequestDesc" class="form-control" style="border:1px solid #696CFF"></textarea>
                    <span asp-validation-for="IVRequestDesc" class="text-danger"></span>
                </div>

                <div class="col-12 mt-2">
                    <label class="form-label">Amount To Be Invested</label>
                    <input asp-for="AmountToBeInvested" class="form-control" style="border:1px solid #696CFF" />
                    <span asp-validation-for="AmountToBeInvested" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="InvestorID" value="@Context.Session.GetString("InvestorID")"/>
                <input type="hidden" name="IdeaID" id="ideaID" />

                <div>
                    <button type="submit" class="mt-3" style="border-radius:6px;margin-left:14px;padding:10px 40px;background-color:#696CFF; color:#fff; border:1px solid #696CFF; cursor:pointer;" asp-route-id="IdeaID">Send Request</button>
                </div>
                @if (ViewBag.Message != null)
                {
                    <h6 class="text-info fw-bold">@ViewBag.Message</h6>
                }
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("ideaID").value = sessionStorage.IdeaID;
</script>
