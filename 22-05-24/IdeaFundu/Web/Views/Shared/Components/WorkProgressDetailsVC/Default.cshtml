@* Work Progress Details VC *@
@model IEnumerable<WorkProgress>

<div class="col-lg-12">
    <button class="accordion show" style="color:#1f2b7b"><b>Work Progress Details</b></button>
    <div class="panel mt-1">
        @{
            int srno = 1;
        }
        @foreach (var record in Model)
        {
            <div class="card shadow-none bg-transparent border border-secondary mb-3 mt-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <label class="text-info"><b>Work Progress No : </b>@srno</label>
                        </div>

                        <div class="col-4">
                            <label class="card-title text-success"><b>Start Date</b> : @record.StartDate.ToString("dd-MM-yyyy")</label>
                        </div>

                        <div class="col-4">
                            <p class="card-text text-danger"><b>Expected Completion Date :</b> @record.ExpectedCompletionDate.ToString("dd-MM-yyyy")</p>
                        </div>
                    </div>
                        
                    <label class="card-text"><b>Current Status : </b>
                        <br>@record.CurrentStatus
                    </label>
                </div>
            </div>
            srno++;
        }
    </div>
</div>
