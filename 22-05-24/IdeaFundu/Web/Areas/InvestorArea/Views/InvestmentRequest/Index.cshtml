@if (TempData["PaymentSuccessfull"] != null)
{
    <div class="alert alert-success text-center"><b>@TempData["PaymentSuccessfull"]</b></div>
}
<div class="nav-align-top mb-4">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-home" aria-controls="navs-top-home" aria-selected="true">
                New
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-profile" aria-controls="navs-top-profile" aria-selected="false" tabindex="-1">
                Accepted
            </button>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade active show" id="navs-top-home" role="tabpanel">
            @await Component.InvokeAsync("ShowNewInvestmentsVC",new {id = Convert.ToInt64(Context.Session.GetString("InvestorID"))})
        </div>
        <div class="tab-pane fade" id="navs-top-profile" role="tabpanel">
            @await Component.InvokeAsync("ShowAcceptedInvestmentsVC",new {id = Convert.ToInt64(Context.Session.GetString("InvestorID"))})
        </div>
    </div>
</div>