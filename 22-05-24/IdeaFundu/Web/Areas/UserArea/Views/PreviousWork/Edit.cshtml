@model PreviousWorkVM
@*@{
    ViewBag.Title = "ADMIN | ADD CATEGORY";
    ViewBag.MainState = "active";
    ViewBag.CategoryState = "active";
}*@
<div class="col-lg-12">
    <div class="card">
        
        <div class="card-body">
            <h5 class="card-title">Edit Previous Work</h5>
            <form asp-action="Edit" method="Post" class="row g-3">
                    <div class="row">
                        <div class="col-2">
                            <label class="form-label">Work Title</label>
                            <input asp-for="WorkTitle" class="form-control" />
                            <span asp-validation-for="WorkTitle" class="text-danger"></span>
                        </div>

                        <div class="col-2">
                            <label class="form-label">Work Description</label>
                            <input asp-for="WorkDescription" class="form-control" />
                            <span asp-validation-for="WorkDescription" class="text-danger"></span>
                        </div>

                        <div class="col-2">
                            <label class="form-label">Duration</label>
                            <input asp-for="Duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="col-2">
                            <label class="form-label">Tentative Budget</label>
                            <input asp-for="TentativeBudget" class="form-control" />
                            <span asp-validation-for="TentativeBudget" class="text-danger"></span>
                        </div>

                        <div class="col-2">
                            <label class="form-label">User Name</label>
                            <select asp-for="UserID" asp-items="@ViewBag.UserID" class="form-select">
                                <option>Select User</option>
                            </select>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                    </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </div>
                @if (ViewBag.Message != null)
                {
                    <h6 class="text-info fw-bold">@ViewBag.Message</h6>
                }
                <input type="hidden" asp-for="PreviousWorkID"/>
            </form>
        </div>
    </div>
</div>