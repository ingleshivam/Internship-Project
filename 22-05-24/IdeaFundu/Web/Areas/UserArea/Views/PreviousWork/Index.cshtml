<div class="card">
    <h5 class="card-header">Previous Works Details</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="7"><a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="PreviousWork">CREATE</a></th>
                </tr>
                <tr>
                    <th>Sr.No</th>
                    <th>Work Title</th>
                    <th>Work Description</th>
                    <th>Duration</th>
                    <th>Tentative Budget</th>
                    <th>Edit / Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srno = 1;
                }
                @foreach (var temp in Model)
                {
@*                    if (Convert.ToInt32(@Context.Session.GetString("UserID")) == temp.UserID)
                    {*@
                        <tr>
                            <td>@srno</td>
                            <td>@temp.WorkTitle</td>
                            <td>@temp.WorkDescription</td>
                            <td>@temp.Duration</td>
                            <td>@temp.TentativeBudget</td>
                            <td colspan="5">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@temp.PreviousWorkID">Edit</a>
                                |
                                <a class="btn btn-outline-primary btn-sm" asp-action="Delete" asp-route-id="@temp.PreviousWorkID">Delete</a>
                            </td>
                        </tr>
@*                    }*@
                    srno++;
                }
            </tbody>
        </table>
    </div>
</div>


