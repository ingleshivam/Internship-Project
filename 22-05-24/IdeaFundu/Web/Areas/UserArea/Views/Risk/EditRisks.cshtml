@model IEnumerable<RiskListVM>
@*@{
    ViewBag.Title = "USER | ADD IDEA";
}*@
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Idea Name</h5>
            <form class="row g-3" asp-action="EditRisks" method="Post">
                <div class="row justify-content-center">
                    @foreach(var temp in Model)
                    {
                            <div class="col-5 ms-5 mt-3 p-3 border" style="border-radius:5px;">
                                    <div class="col-12">
                                        <label class="form-label">Idea Name</label>
                                        <select asp-for="@temp.IdeaID" asp-items="@ViewBag.IdeaID" class="form-select">
                                            <option>Select Idea Name</option>
                                        </select>
                                        <span asp-validation-for="@temp.IdeaID" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Risk Title</label>
                                        <input asp-for="@temp.RiskTitle" class="form-control" />
                                        <span asp-validation-for="@temp.RiskTitle" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Risk Description</label>
                                        <textarea asp-for="@temp.RiskDescription" class="form-control" rows="5"> </textarea>
                                        <span asp-validation-for="@temp.RiskDescription" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Risk Level</label>
                                        <select asp-for="@temp.RiskLevel" asp-items="Html.GetEnumSelectList<RiskLevel>()" class="form-select">
                                            <option>Select Risk Level</option>
                                        </select>
                                        <span asp-validation-for="@temp.RiskLevel" class="text-danger"></span>
                                    </div>

                                    @*                <div>
                                @await Component.InvokeAsync("EditRiskListVC")
                                </div>*@

                                    @if (ViewBag.Message != null)
                                    {
                                        <h6 class="text-info fw-bold">@ViewBag.Message</h6>
                                    }
                                    @*<input type="hidden" asp-for="RiskID" />*@
                            </div>
                    }
                    <div>
                        <button type="submit" class="btn btn-primary btn-sm mt-3">Update</button>
                        <a class="btn btn-primary btn-sm ms-2 mt-3" asp-action="Index" asp-controller="Risk" asp-area="UserArea">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

