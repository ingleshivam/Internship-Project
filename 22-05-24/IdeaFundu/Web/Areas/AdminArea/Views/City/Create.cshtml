@model CityVM
@{
    ViewBag.Title = "ADMIN | ADD CITY";
    ViewBag.MainState = "active";
    ViewBag.CityState = "active";
}
<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Cities</h5>
            <form class="row g-3" asp-action="Create" method="Post">
                <div class="col-12">
                    <label class="form-label">City Name</label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Country Name</label>
                    <select asp-for="CountryID" asp-items="@ViewBag.CountryID" class="form-select" id="CountryID">
                        <option value="0">Select Country</option>
                    </select>
                    <span asp-validation-for="CountryID" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">State Name</label>
                    <select asp-for="StateID" asp-items="@ViewBag.StateID" id="State" name="StateID" class="form-select">
                        <option value="0">Select State</option>
                    </select>
                    <span asp-validation-for="StateID" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary btn-sm">Create</button>
                </div>
                @if (ViewBag.Message != null)
                {
                    <h6 class="text-info fw-bold">@ViewBag.Message</h6>
                }

            </form>
        </div>
    </div>
</div>

